{
  "manifest_version": 3,
  "name": "Legal Splice",
  "version": "1.0",
  "description": "Edit, merge, and split PDF files",
  "action": {
    "default_popup": "pdfmerger.html",
    "default_icon": {
      "16": "pdf.png",
      "48": "pdf.png",
      "128": "pdf.png"
    }
  },
  "permissions": [
    "storage", 
    "activeTab",
    "fileSystem"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
