{
  "manifest_version": 3,
  "name": "PDF Tools Extension",
  "version": "1.0",
  "description": "A Chrome extension to merge, reorder, and add text to PDFs.",
  "permissions": [
    "storage",
    "downloads",
    "clipboardRead",
    "clipboardWrite",
    "activeTab"
  ],
  "background": {
    "service_worker": "/html/scripts/background.js"
  },
  "action": {
    "default_popup": "html/dashboard.html"
  },
  "icons": {
    "16": "icons/logicgate.png",
    "48": "icons/logicgate.png",
    "128": "icons/logicgate.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "html/*.html",
        "scripts/pdf.worker.min.js",
        "scripts/pdf.min.js",
        "scripts/pdf-lib.min.js",
        "icons/logicgate.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["<all_urls>"]
  "content_scripts": [
    {
      "js": ["/html/scripts/pdf-merge.js", "/html/scripts/pdf-reorder.js", "/html/scripts/pdf-addtext.js"],
      "matches": ["<all_urls>"]
    }
  ],

}
