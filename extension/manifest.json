{
  "manifest_version": 3,
  "name": "PDF Tools Extension",
  "version": "1.0",
  "description": "A Chrome extension to merge, reorder, and add text to PDFs.",
  "action": {
    "default_popup": "html/dashboard.html"
  },
  "permissions": [
    "storage",
    "downloads",
    "clipboardRead",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "icons": {
    "16": "icons/logicgate.png",
    "48": "icons/logicgate.png",
    "128": "icons/logicgate.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "html/*.html",
        "scripts/*.js",
        "icons/logicgate.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "js": ["scripts/pdf-merge.js", 
      "scripts/pdf-reorder.js", 
      "scripts/pdf-addtext.js",
      "scripts/pdf-lib.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}
